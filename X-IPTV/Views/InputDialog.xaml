<Window
    x:Class="X_IPTV.Views.InputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="340"
    Height="170"
    MinWidth="340"
    MinHeight="170">
    <StackPanel Margin="10">
        <!--  Named TextBlock for setting message dynamically  -->
        <TextBlock x:Name="MessageTextBlock" Text="Please enter a value:" />
        <TextBox x:Name="InputTextBox" Margin="0,10" />
        <StackPanel
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="OkButton"
                Width="75"
                Margin="0,0,5,0"
                Click="OkButton_Click"
                Content="OK" />
            <Button
                Width="75"
                Click="CancelButton_Click"
                Content="Cancel" />
        </StackPanel>
    </StackPanel>
</Window>
