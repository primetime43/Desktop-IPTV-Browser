<Page
    x:Class="X_IPTV.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:X_IPTV"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    MinWidth="800"
    MinHeight="450"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="#333333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  VLC Path Label  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            VerticalAlignment="Bottom"
            Content="VLC Path:"
            Foreground="White" />
        <!--  VLC Path TextBox  -->
        <TextBox
            x:Name="vlcLocation_Input"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="20,0,0,0"
            Background="#f8f9fa"
            Foreground="Black"
            IsReadOnly="True"
            Style="{StaticResource MaterialDesignTextBox}"
            TextAlignment="Center"
            ToolTip="{Binding Text, RelativeSource={RelativeSource Mode=Self}}" />
        <!--  Set VLC Path Button  -->
        <Button
            x:Name="setVLCpath_Btn"
            Grid.Row="1"
            Grid.Column="2"
            Width="50px"
            Height="30px"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            Background="Transparent"
            BorderBrush="Black"
            Click="setVLCpath_Btn_Click">
            <StackPanel Orientation="Horizontal">
                <Image
                    Width="20"
                    Height="20"
                    Source="../Icons/folder-open-regular.png" />
            </StackPanel>
        </Button>

        <!--  Users Folder Path Label  -->
        <Label
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            VerticalAlignment="Bottom"
            Content="Xtream Codes Users Folder Path:"
            Foreground="White" />
        <!--  Users Folder Path TextBox  -->
        <TextBox
            x:Name="setUsersFolderPath_Input"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="20,0,0,0"
            Background="#f8f9fa"
            Foreground="Black"
            IsReadOnly="True"
            Style="{StaticResource MaterialDesignTextBox}"
            TextAlignment="Center"
            ToolTip="{Binding Text, RelativeSource={RelativeSource Mode=Self}}" />
        <!--  Set Users Folder Path Button  -->
        <Button
            x:Name="setUsersFolderPath_Btn"
            Grid.Row="4"
            Grid.Column="2"
            Width="50px"
            Height="30px"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            Background="Transparent"
            BorderBrush="Black"
            Click="setUsersFolderPath_Btn_Click">
            <StackPanel Orientation="Horizontal">
                <Image
                    Width="20"
                    Height="20"
                    Source="../Icons/folder-open-regular.png" />
            </StackPanel>
        </Button>

        <!--  M3U Playlists Label  -->
        <Label
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            VerticalAlignment="Bottom"
            Content="M3U Playlists Path:"
            Foreground="White" />
        <!--  M3U Playlists TextBox  -->
        <TextBox
            x:Name="setM3UPlaylistsPath_Input"
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="20,0,0,0"
            Background="#f8f9fa"
            Foreground="Black"
            IsReadOnly="True"
            Style="{StaticResource MaterialDesignTextBox}"
            TextAlignment="Center"
            ToolTip="{Binding Text, RelativeSource={RelativeSource Mode=Self}}" />
        <!--  Set M3U Playlists Path Button  -->
        <Button
            x:Name="setM3UPlaylistsPath_Btn"
            Grid.Row="6"
            Grid.Column="2"
            Width="50px"
            Height="30px"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            Background="Transparent"
            BorderBrush="Black"
            Click="setM3UPlaylistsPath_Btn_Click">
            <StackPanel Orientation="Horizontal">
                <Image
                    Width="20"
                    Height="20"
                    Source="../Icons/folder-open-regular.png" />
            </StackPanel>
        </Button>

        <!--  EPG Data Folder Path Label  -->
        <Label
            Grid.Row="7"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            VerticalAlignment="Bottom"
            Content="EPG Data Folder Path:"
            Foreground="White" />
        <!--  EPG Data Folder Path TextBox  -->
        <TextBox
            x:Name="setEpgDataFolderPath_Input"
            Grid.Row="8"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="20,0,0,0"
            Background="#f8f9fa"
            Foreground="Black"
            IsReadOnly="True"
            Style="{StaticResource MaterialDesignTextBox}"
            TextAlignment="Center"
            ToolTip="{Binding Text, RelativeSource={RelativeSource Mode=Self}}" />

        <!--  Set EPG Data Folder Path Button  -->
        <Button
            x:Name="setEpgDataFolderPath_Btn"
            Grid.Row="8"
            Grid.Column="2"
            Width="50px"
            Height="30px"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            Background="Transparent"
            BorderBrush="Black"
            Click="setEpgDataFolderPath_Btn_Click">
            <StackPanel Orientation="Horizontal">
                <Image
                    Width="20"
                    Height="20"
                    Source="../Icons/folder-open-regular.png" />
            </StackPanel>
        </Button>

        <CheckBox
            x:Name="autoUpdateCheckBox"
            Grid.Row="9"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="8,78,192,0"
            VerticalAlignment="Top"
            Checked="AutoUpdateCheckBox_Checked"
            Content="Enable Auto-Update"
            Foreground="White"
            Unchecked="AutoUpdateCheckBox_Unchecked" />

        <!--  Indicator Label  -->
        <Label
            x:Name="autoUpdateIndicator"
            Grid.Row="9"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="146,76,54,0"
            VerticalAlignment="Top"
            Content="Auto-Update: On"
            Foreground="LimeGreen" />


        <!--  Set Auto EPG Update time  -->
        <Label
            Grid.Row="9"
            Grid.ColumnSpan="2"
            Margin="5,0,195,0"
            VerticalAlignment="Center"
            Content="EPG Update Interval (Hours):"
            Foreground="White" />
        <Slider
            x:Name="epgUpdateIntervalSlider"
            Grid.Row="10"
            Grid.Column="1"
            VerticalAlignment="Center"
            IsSnapToTickEnabled="True"
            Maximum="24"
            Minimum="1"
            TickFrequency="1"
            ValueChanged="EpgUpdateIntervalSlider_ValueChanged">
            <Slider.Resources>
                <Style TargetType="Thumb">
                    <Setter Property="Width" Value="20" />
                    <!--  Increase width  -->
                    <Setter Property="Height" Value="20" />
                    <!--  Increase height  -->
                    <Setter Property="Background" Value="Gray" />
                    <!--  Optional: Make it more visible  -->
                </Style>
            </Slider.Resources>
        </Slider>

        <Label
            Grid.Row="9"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5,0,195,0"
            VerticalAlignment="Center"
            Content="{Binding ElementName=epgUpdateIntervalSlider, Path=Value, StringFormat='{}{0} hours'}"
            Foreground="White" />


        <!--  Check for Update Button  -->
        <Button
            x:Name="checkForUpdate_Btn"
            Grid.Row="9"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Width="160px"
            Height="50px"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Click="checkForUpdate_Btn_Click"
            Content="Check for update" />

        <!--  Check for Update Button  -->
        <Button
            x:Name="updateEPG_Btn"
            Grid.Row="9"
            Grid.Column="2"
            Width="160px"
            Height="50px"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Click="updateEpgBtn_Click"
            Content="Update EPG" />
        <Label
            x:Name="lastEPGUpdateLbl"
            Grid.Row="9"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="370"
            Margin="20,0,0,20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="Label" />
    </Grid>
</Page>
