                    Content="{Binding Button1Content, RelativeSource={RelativeSource AncestorType={x:Type local:OptionsPopup}}}" />
                <Button
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="{Binding Button2Content, RelativeSource={RelativeSource AncestorType={x:Type local:OptionsPopup}}}" />

                <!--<TextBox
